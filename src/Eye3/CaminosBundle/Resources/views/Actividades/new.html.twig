{% extends '::base.html.twig' %}
{% block stylesheets %}
{{ parent() }}
                <link rel="stylesheet" href="{{ asset('bundles/eye3caminos/css/datepicker.css') }}" />
                <link rel="stylesheet" href="{{ asset('bundles/eye3caminos/css/datepicker3.css') }}" />
{% endblock %}
{%- block body -%}
 

	<div class="page-content-area">
						<div class="page-header">
							<h1>Nuevo Usuario </h1>
						</div><!-- /.page-header -->

						<div class="row">
							<div class="col-xs-12">
								<!-- PAGE CONTENT BEGINS -->
								 {{ form_start(form, {'attr':{'class':'form-horizontal'}}) }}
								<!-- #section:elements.form -->
							
								<div class="space-4"></div>
								<div class="space"></div>

								<div class="form-group">
									{{ form_label(form.usuario, '', { 'label_attr': { 'class': 'col-sm-2 control-label no-padding-right' }}) }}

										{{ form_widget(form.usuario, {'attr': {'class': 'col-xs-10 col-sm-3 col-sm-offset-1', 'placeholder': 'Ingrese nombre' }}) }}
									<div class="col-sm-3">
										{{ form_errors(form.usuario) }}
									</div>
								</div>	
								
								<div class="form-group">
									{{ form_label(form.actividad, '', { 'label_attr': { 'class': 'col-sm-2 control-label no-padding-right' }}) }}

										{{ form_widget(form.actividad, {'attr': {'class': 'col-xs-10 col-sm-3 col-sm-offset-1', 'placeholder': 'Ingrese actividad' }}) }}
									<div class="col-sm-3">
										{{ form_errors(form.actividad) }}
									</div>
								</div>	

								<div class="form-group">
									{{ form_label(form.fecha, '', { 'label_attr': { 'for': 'id-date-picker-1','class': 'col-sm-2 control-label no-padding-right' }}) }}

										{{ form_widget(form.fecha, {'attr': {'class': 'date-picker col-sm-3 col-sm-offset-1', 'id': 'id-date-picker-1', 'type': 'text', 'data-date-format': 'dd-mm-yyyy' }}) }}
									<span class="input-group-addon col-sm-2">
																		<i class="fa fa-calendar bigger-110"></i>
																	</span>
									<div class="col-sm-3">
										{{ form_errors(form.fecha) }}
									</div>
								</div>	
								
								
								<div class="form-group">
									{{ form_label(form.hora, '', { 'label_attr': { 'for': 'date-timepicker1','class': 'col-sm-2 control-label no-padding-right' }}) }}

										{{ form_widget(form.hora, {'attr': {'class': 'col-sm-3 col-sm-offset-1', 'id': 'date-timepicker1', 'type': 'text' }}) }}
									<div class="input-group-addon col-sm-3">
																<i class="fa fa-clock-o bigger-110"></i>
															</div>
									<div class="col-sm-3">
										{{ form_errors(form.hora) }}
									</div>
								</div>
								

								<!-- /section:elements.form -->
								<div class="space-4"></div>

								<div class="space"></div>

								<div class="clearfix form-actions">
								<div class="col-md-offset-5 col-md-7">


								{{ form_widget(form.submit, {'label':'Guardar', 'attr':{'class':'btn btn-info'}}) }}

								&nbsp; &nbsp;
								<button type="reset" class="btn">
									<i class="ace-icon fa fa-undo bigger-110"></i>
									Borrar
								</button>
							</div>
						</div>
						{{ form_end(form) }}
	
	

        <a class="btn btn-green" href="{{ path('actividades') }}">
            listado
        </a>

