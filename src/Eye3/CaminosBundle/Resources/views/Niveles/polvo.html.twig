							}, yaxis: {
									min : 0,
						{#% if medicion == "pm10"  %}
									max : 5000,
						{% endif %#}
									axisLabel: '{{titulos.0 ~ titulos.1}}'
							}, grid: {
								hoverable: true,
								clickable: true,
						{% if medicion == "pm10" %}
								markings: [
											  { color: 'yellow', yaxis: { from: 1600, to: 1600  } },
