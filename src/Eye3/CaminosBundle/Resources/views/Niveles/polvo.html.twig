		function cambios(event){
			ocultar();
			if(event.checked) xrango();
			else xdia();
		}
		
		function ocultar(){
			var placeholder1 = $('#placeholder1').css({'display':'none'});
			var leyenda1 = $('#legendContainer1').css({'display':'none'});
			var placeholder2 = $('#placeholder2').css({'display':'none' });
