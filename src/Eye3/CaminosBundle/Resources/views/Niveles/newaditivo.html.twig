{% extends '::base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
                <link rel="stylesheet" href="{{ asset('bundles/eye3caminos/css/bootstrap-datetimepicker.css') }}" />
{% endblock %}

{%- block body -%}
 

	<div class="page-content-area">
						<div class="page-header">
							<h1>Agregar Valores de Agua y Aditivo</h1>
						</div><!-- /.page-header -->

						<div class="row">
							<div class="col-xs-12">
								<!-- PAGE CONTENT BEGINS -->
								 {{ form_start(form, {'attr':{'class':'form-horizontal'}}) }}
								<!-- #section:elements.form -->
							
								<div class="space-4"></div>
								<div class="space"></div>

								<div class="form-group">
									{{ form_label(form.agua, '', { 'label_attr': { 'class': 'col-sm-2 control-label no-padding-right' }}) }}

									<div class="input-group col-sm-offset-1 pull-left">
										{{ form_widget(form.agua) }}
									</div>
									<div class="col-sm-3">
										{{ form_errors(form.agua) }}
									</div>
								</div>	
								
								<div class="form-group">
									{{ form_label(form.aditivo, '', { 'label_attr': { 'class': 'col-sm-2 control-label no-padding-right' }}) }}

									<div class="input-group col-sm-offset-1 pull-left">
										{{ form_widget(form.aditivo) }}
									</div>	
									<div class="col-sm-3">
										{{ form_errors(form.aditivo) }}
									</div>
								</div>	

								<div class="form-group">
									{{ form_label(form.fecha, '', { 'label_attr': { 'for': 'date-timepicker1','class': 'col-sm-2 control-label no-padding-right' }}) }}

									<div class="input-group col-xs-10 col-sm-2 col-sm-offset-1 pull-left">
										{{ form_widget(form.fecha, {'attr': {'class': 'form-control date-timepicker1','value':fecha|date("d/m/Y H:i", "America/Santiago"), 'type': 'datetime' }}) }}
									<span class="input-group-addon">
										<i class="fa fa-clock-o bigger-110"></i>
									</span>
									</div>	
									<div class="col-sm-3">
										{{ form_errors(form.fecha) }}
									</div>
								</div>	
								
								

								<!-- /section:elements.form -->
								<div class="space-4"></div>

								<div class="space"></div>

								<div class="clearfix form-actions">
								<div class="col-md-offset-5 col-md-7">


								{{ form_widget(form.submit, {'label':'Guardar', 'attr':{'class':'btn btn-info'}}) }}

								&nbsp; &nbsp;
								<button type="reset" class="btn">
									<i class="ace-icon fa fa-undo bigger-110"></i>
									Borrar
								</button>
							</div>
						</div>
						{{ form_end(form) }}
	
	

{% endblock %}
	
